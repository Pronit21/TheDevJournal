@model DevBlogs.Web.Models.ViewModels.AddTagRequest
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center">Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
		<div class="mb-3">
			<label for="form-label">Name</label>
			<input type="text" class="form-control" id="name" placeholder="Enter Name" asp-for="Name" />
		</div>

		<div class="mb-3">
			<label for="form-label">Display Name</label>
			<input type="text" class="form-control" id="displayName" placeholder="Enter Display Name" asp-for="DisplayName" />
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>